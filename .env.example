# Polymarket Trading Bot
# Never commit real secrets. Copy to .env and fill in.

# Private key used by py_clob_client to derive/create API keys.
# If you use Polymarket email/Magic, export from https://reveal.magic.link/polymarket
# If you use a browser wallet or EOA, use that private key.
POLY_PRIVATE_KEY=

# Optional: if using Polymarket proxy wallet funding model
POLY_FUNDER_ADDRESS=
POLY_SIGNATURE_TYPE=1  # 0=EOA, 1=POLY_PROXY (Magic/email), 2=POLY_GNOSIS_SAFE/Proxy per docs

# Trading mode (paper|live). Bot will refuse to trade unless live.
TRADING_MODE=paper

# Kill switch: set to 1 to prevent any order placement (paper/live).
KILL_SWITCH=0

# Risk controls
MAX_ORDER_USDC=20
MIN_EDGE_CENTS=1.5

# Runtime
LOG_LEVEL=INFO

# ============================================================================
# MIRROR TRADING CONFIGURATION
# ============================================================================

# Target account to monitor (required for mirror trading)
TARGET_ACCOUNT_ADDRESS=

# Mirror account settings
MIRROR_ACCOUNT_ADDRESS=
MIRROR_PROXY_ADDRESS=
MIRROR_RATIO=1.0

# Polling configuration
POLL_INTERVAL_SECONDS=10
USE_FAST_POLLING=false
FAST_POLL_INTERVAL_SECONDS=1.0
ORDER_EXECUTION_MODE=GTC  # GTC, FOK, IOC, or FAK

# Trade size limits
MIN_TRADE_SIZE_USD=1.0
MAX_TRADE_SIZE_USD=10000.0

# Simplified small-size modes
FIXED_MIRROR_NOTIONAL_ENABLED=true
FIXED_MIRROR_NOTIONAL_USD=3.0
FIXED_MIRROR_MAX_SHARES=50
FIXED_MIRROR_SIZE_ENABLED=false
FIXED_MIRROR_SIZE_SHARES=2

# Risk management
DRY_RUN_MODE=false
ONLY_BUY_AT_LOWER_PRICE=false
RESERVE_BALANCE_USD=10.0
MAX_POSITION_SIZE_USD=50.0
AUTO_DOWNSIZE_ENABLED=true
AUTO_DOWNSIZE_MAX_SHARES=2
AUTO_DOWNSIZE_MIN_SHARES=1
MIN_MARKETABLE_ORDER_NOTIONAL_USD=3.0

# Data API settings
DATA_API_FIRST=true
DISABLE_CLOB_TRADE_FETCH=false
CLOB_TRADE_FETCH_TIMEOUT_SECONDS=8.0
CLOB_HTTP_TIMEOUT_SECONDS=20.0
CLOB_CONNECT_TIMEOUT_SECONDS=10.0
CLOUDFLARE_BLOCK_COOLDOWN_SECONDS=600

