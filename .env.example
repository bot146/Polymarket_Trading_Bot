# Polymarket Trading Bot
# Never commit real secrets. Copy to .env and fill in.

# Private key used by py_clob_client to derive/create API keys.
# If you use Polymarket email/Magic, export from https://reveal.magic.link/polymarket
# If you use a browser wallet or EOA, use that private key.
POLY_PRIVATE_KEY=

# Optional: if using Polymarket proxy wallet funding model
POLY_FUNDER_ADDRESS=
POLY_SIGNATURE_TYPE=1  # 0=EOA, 1=POLY_PROXY (Magic/email), 2=POLY_GNOSIS_SAFE/Proxy per docs

# Trading mode (paper|live). Bot will refuse to trade unless live.
TRADING_MODE=paper

# Kill switch: set to 1 to prevent any order placement (paper/live).
KILL_SWITCH=0

# Runtime concurrency
MAX_CONCURRENT_TRADES=5

# Strategy toggles
ENABLE_ARBITRAGE=true
ENABLE_GUARANTEED_WIN=true
ENABLE_MULTI_OUTCOME_ARB=true
ENABLE_STAT_ARB=false
ENABLE_SNIPING=false
ENABLE_MARKET_MAKING=false
ENABLE_VALUE_BETTING=false
ENABLE_ORACLE_SNIPING_STRATEGY=false

# Risk controls
MAX_ORDER_USDC=20
MIN_ORDER_USDC=2
INITIAL_ORDER_PCT=25
MIN_EDGE_CENTS=1.5

# Execution profile (controls maker aggressiveness vs hard guarantee behavior)
# - aggressive_maker: higher fill rate, higher activity; hedges after a brief window
# - hard_guarantee: hedges immediately; prefers certainty over fill probability
EXECUTION_PROFILE=aggressive_maker

# How long to wait (ms) for the complementary leg before forcing a hedge.
HEDGE_TIMEOUT_MS=1200

# Inventory / exposure safety rails
MAX_INVENTORY_USDC_PER_CONDITION=25
MAX_OPEN_GTC_ORDERS_PER_CONDITION=8

# Runtime
LOG_LEVEL=INFO

# Data API settings
DATA_API_FIRST=true
DISABLE_CLOB_TRADE_FETCH=false
CLOB_TRADE_FETCH_TIMEOUT_SECONDS=8.0
CLOB_HTTP_TIMEOUT_SECONDS=20.0
CLOB_CONNECT_TIMEOUT_SECONDS=10.0
CLOUDFLARE_BLOCK_COOLDOWN_SECONDS=600

# Market scanning settings
# Maximum number of markets to fetch from API (default: 10000, set to 0 to use DEFAULT_FETCH_LIMIT)
# Note: The Polymarket API may have its own limits regardless of this setting
MARKET_FETCH_LIMIT=10000
# Minimum volume threshold for markets (in USDC)
MIN_MARKET_VOLUME=5000

# ── Fee Modeling ─────────────────────────────────────────────────────
TAKER_FEE_RATE=0.02
MAKER_FEE_RATE=0.005

# ── Circuit Breaker ─────────────────────────────────────────────────
MAX_DAILY_LOSS_USDC=50
MAX_DRAWDOWN_PCT=10
MAX_CONSECUTIVE_LOSSES=5
CIRCUIT_BREAKER_COOLDOWN_MINUTES=30

# ── Exit Rules ───────────────────────────────────────────────────────
PROFIT_TARGET_PCT=5
STOP_LOSS_PCT=3
MAX_POSITION_AGE_HOURS=24
EXIT_CHECK_INTERVAL_SECONDS=15

# ── Order Book Depth ─────────────────────────────────────────────────
MIN_BOOK_DEPTH_USDC=10
VERIFY_BOOK_DEPTH=true

# ── Paper Fill Realism ───────────────────────────────────────────────
PAPER_FILL_PROBABILITY=0.5
PAPER_REQUIRE_VOLUME_CROSS=true
PAPER_RANDOM_SEED=

# ── Oracle Sniping (CoinGecko, free) ────────────────────────────────
ENABLE_ORACLE_SNIPING=true
ORACLE_CHECK_INTERVAL_SECONDS=10
ORACLE_MIN_CONFIDENCE=0.95

# ── Additional Structural Strategies ──────────────────────────────────
ENABLE_CONDITIONAL_ARB=false
ENABLE_LIQUIDITY_REWARDS=false
ENABLE_NEAR_RESOLUTION=false
ENABLE_ARB_STACKING=false
MAX_ARB_STACKS=3
NEAR_RESOLUTION_MAX_HOURS=48
LIQUIDITY_REWARDS_MAX_POSITION=50

# ── Copy Trading (disabled by default) ──────────────────────────────
ENABLE_COPY_TRADING=false
WHALE_MIN_TRADE_USDC=1000
# WHALE_ADDRESSES=0xaddr1,0xaddr2

# ── Dashboard ────────────────────────────────────────────────────────
ENABLE_DASHBOARD=true
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8050

